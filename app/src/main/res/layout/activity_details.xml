<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vishistvarugeese.dietassistant.DetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/logo"
            android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please enter your details"
                android:textSize="25dp"
                android:layout_marginBottom="30dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/txtHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_edittext"
                android:padding="15dp"
                android:textColorHint="@color/hint"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:inputType="number"
                android:hint="Enter your height (in meters)"/>

            <EditText
                android:id="@+id/txtWeight"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_edittext"
                android:padding="15dp"
                android:textColorHint="@color/hint"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:inputType="number"
                android:hint="Enter your weight (in Kg)"/>

            <EditText
                android:id="@+id/txtAge"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_edittext"
                android:padding="15dp"
                android:textColorHint="@color/hint"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:inputType="number"
                android:hint="Enter your age (in years)"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/radioGroup"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0"
                    android:buttonTint="@color/colorAccent"
                    android:shadowColor="@color/colorAccent"
                    android:text="Male"
                    android:textColor="@color/colorAccent"
                    android:textColorHighlight="@color/colorAccent"
                    android:textColorLink="@color/colorAccent"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radioFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:buttonTint="@color/colorAccent"
                    android:shadowColor="@color/colorAccent"
                    android:text="Female"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

            </RadioGroup>

        </LinearLayout>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_button1"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:onClick="onSubmit"
            android:textSize="20sp"
            tools:ignore="OnClick" />

    </LinearLayout>

</RelativeLayout>
